{
	singleton;
	
	1 <@>- 1..* Pizza pizzas;
	1 <@>- 1..* Ingredient ingredients;
	1 <@>- * Order orders;
}

class Pizza
{
	Double price; 
	
	* -> 1..* Ingredient;
	
	before constructor {
		if(allIngredients==null || allIngredients.length==0)
		{
			throw new RuntimeException("Pizza ingredients cannot be empty");
		}
	}
}

class MenuPizza
{
	isA Pizza;
	 
